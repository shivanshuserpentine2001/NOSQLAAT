
<h3>{{{viewTitle}}}</h3>
<form action="/cancer" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{cancer._id}}">
    <div class="form-group">
        <label>AGE</label>
        <input type="number" class="form-control" name="AGE" placeholder="AGE" value="{{cancer.AGE}}">
    </div>
    <div class="form-group">
        <label>Gender</label>
        <input type="text" class="form-control" name="gender" placeholder="Gender" value="{{cancer.GENDER}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>ALCOHOL-CONSUMING</label>
            <input type="text" class="form-control" name="ALCOHOLCONSUMING" placeholder="ALCOHOLCONSUMING" value="{{cancer.ALCOHOLCONSUMING}}">
        </div>
        <div class="form-group col-md-6">
            <label>CHRONICDISEASE</label>
            <input type="text" class="form-control" name="CHRONICDISEASE" placeholder="CHRONICDISEASE" value="{{cancer.CHRONICDISEASE}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="cancer/list.hbs"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>